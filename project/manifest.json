{
  "manifest_version": 3,
  "name": "상품 최저가 비교 익스텐션",
  "version": "1.0",
  "description": "paligemma 모델을 사용하여 상품의 최저가를 비교하는 크롬 익스텐션",
  "default_locale": "ko",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*.google.com/"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ],
  "icons": {
  }
}